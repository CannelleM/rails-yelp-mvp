<div class="m-3">
  <h1><%= @restaurant.name %></h1>
  <ul></ul>
    <li><%= "Category: #{@restaurant.category}" %></li>
    <li><%= "Address: #{@restaurant.address}" %></li>
    <li><%= "Phone number: #{@restaurant.phone_number}" %></li>
  </ul>
  <br>
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><strong><%= "#{review.rating}/5 -"%></strong> <%= review.content %></li>
    <% end %>
  </ul>
  <br>
  <div class="m-3">
    <h3>Leave a review:</h3>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :rating , :collection => [0, 1, 2, 3, 4, 5]%>
      <%= f.input :content %>
      <p class= "fst-italic">all fiels with * are mandatory</p>
      <%= f.submit class:"btn btn-primary"%>
    <% end %>
    <%= link_to "Back to restaurants list", restaurants_path, class: "btn btn-outline-primary mt-2" %>
  </div>
</div>
